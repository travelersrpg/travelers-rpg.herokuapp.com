<div class="logo"><%= image_tag "logo.png", class: "logo-img", height: "100", width: "100" %></div>
<div class="header">
  <header>
    <ul>
      <li><a href="/" class="btn2 btn">ホーム</a></li>
      <li><a href="" class="btn4 btn">運営メンバー</a></li>
      <li><a href="" class="btn4 btn">ストーリー</a></li>
      <li><a href="" class="btn4 btn">サーバシステム</a></li>
      <% if logged_in? %>
        <li><%= link_to "ログアウト", logout_path, method: :delete,class: "btn4" %></li>
